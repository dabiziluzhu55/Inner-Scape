/* 呼吸 */
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
  margin-top:-37%;
} 

.button-row {
  display: flex;
  flex-direction: row;
}

.button {
  aspect-ratio: 1; /* 设置宽高一致 */
  margin: 3%;
  border: 2px solid rgb(158, 152, 152);
  background-color: rgba(223, 219, 219, 0.048);
}

.titletext{
  border-radius: 1%;
  margin: 3%;
  font-size: 15px;
  font-family: "宋体";
  white-space: pre-wrap;
}

.contenttext{
  margin: 5%;
  font-size: 15px;
  font-family: "宋体";
}

.img{
  margin-top: 5%;
  width: 105%;
  height: 80%;
  border-radius: 50%;
}

.placeholder {
  height: 1px;
  visibility: hidden;

}


