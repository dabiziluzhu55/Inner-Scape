  bottom: 0;
  left: 0;
  width: 100%;
  height: 140rpx;
  background-color: rgba(0, 0, 0, 0.4); /* 设置黑色矩形的透明度为0.5 */
  border-radius: 20rpx 20rpx 0 0; /* 设置上面两个角为圆角 */
}
.cha {
  color: white;
  font-size: 50rpx;
  position:fixed;
  left:20rpx;
  bottom: 50rpx;
}
.isPlay{
  color:white;
