/* 导航条 */
.navBar {
  display: flex;
  justify-content: space-around;
  height: 100rpx;
  position: fixed;
  width: 100%;
  background: #fff;
}
.secBar {
  display: flex;
  justify-content: space-around;
  height: 100rpx;
  position: fixed;
  width: 100%;
  top:100rpx;
  background: #fff;
}
/* 导航条item */
.navItem {
  line-height: 60rpx;
  display: flex;
  align-items: center;
  margin-top: 10px;
  justify-content: center;
  border-bottom: 4rpx solid transparent;
}
/* 大导航条选中 */
.active {
  color:#252525;
  font-size:23px;
  font-weight:550;
  border-bottom: 10rpx solid #bfd3fa;
}
/* 小导航条选中 */
.secActive {
  color:#fff;
  font-weight:400; 
  padding-left: 10rpx;
  padding-right: 10rpx;
  background-color: #6370d9;
  border-radius: 10px;
  position: relative;
}

.content_wrapper{
  /* margin-top: 100rpx; */
  padding-top: 200rpx;
  flex: 1;
}

/* 冥想页面图标显示列表 */
.Infolist{
  margin-top: 20rpx;
}
  /*冥想图标和文字*/
.Info-list-info{
  float: left;
  margin-left: 20rpx;
  margin-top: 20rpx;
  position: relative;
}
.photo-item{
  border-radius: 4px;
  width: 350rpx;
  height: 330rpx;
}
.Info-desc{
  display: block;
  color: #000;
  font-size: medium;
  bottom: 3%;
  left: 0;
  width: 94%;
  text-align: left;
  padding: 10rpx;
  opacity: 0.7;
}

/* 以下是第二个页面的css代码 */
.sound {
  display: flex;
  flex-direction: column;
}

/* 以下是声音页面的代码 */
.image-item {
  width: 120rpx; /* 设置图片的宽度 */
  height: 120rpx; /* 设置图片的高度 */
  border-radius: 50%; /* 设置边框半径为50%，即圆形 */
  overflow: hidden; /* 隐藏图片超出边界的部分，以实现圆形效果 */
}

.image-text{
  width: 180rpx; 
  height: 210rpx; 
  display: flex;
  flex-direction:column;
  align-items: center;
}
.Info-list-info2{
  float: left;
  margin-left: 20rpx;
  margin-top: 20rpx;
  /* position: relative; */
}

.image-container {
  margin-top: 15rpx;
  margin-left: 10rpx;
  display: flex;
  flex-wrap: wrap;
}

.soundTitle{
  font-size: 45rpx;
  margin-top: 100rpx;
  margin-left: 30rpx;
}

