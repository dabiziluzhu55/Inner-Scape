  margin-left: 20rpx;
  font-size: 35rpx;
  color: #f4ae8a;
}
.week_content {
  margin-left: 20rpx;
  margin-top: 10rpx;
}
.divider{
  margin-top: -20rpx;
  margin-left: 20rpx;
  width: 88%;
  height: 6rpx;
  background: linear-gradient(to right, #ead6ee, #a0f1ea);
}
.echarts{
  margin-left: 60rpx;
  width: 600rpx;
  height:400rpx;
  margin-bottom: -40rpx;
  margin-top: -110rpx;
}
ec-canvas{
  width: 100%;
  height: 120%;
}
.color_dot{
  width: 15px;
  height: 15px;
  border-radius: 50%;
  position: relative;
  left:20rpx;
}


.date-string {
  margin-top: 20rpx;
  background-color: #fff;
  font-size: 28rpx;
  padding: 0 30rpx;
  line-height: 60rpx;
}

/* 心情分布 */
/* 心情总体布局 */
.emotions-layout{
  display: flex;
  flex-direction: column;
  flex-wrap: wrap;
  border-radius: 10px;
  margin-top: 4%;
  margin-left: 5%;
  margin-right: 5%;
  background-color: rgb(255,255,255);
}

/* 表情总体布局 */
.link {
  display: flex; 
  flex-direction: row;
  flex-wrap: wrap; 
  width: 97%;
  height: auto;
  position: relative;
  margin-left: 1%;
  margin-right: 1%;
  margin-top: 2%;
  border-radius: 5px;
 } 

 /* 单个心情container */
 .link_child {
   display: flex;
   flex-direction: column;
   align-items: center;
   justify-content: center;
   margin-top: 2px;
   margin-left: 1.5%;
   width: 20%;
   /* 设置宽高一致 */
   aspect-ratio: 1; 
   background: transparent;
   border-radius: 5px;
   margin-bottom: 1%;
 } 

 .link_child:not(:nth-child(4n)){
  margin-right: 2.5%; 
 }

 /* 心情图标 */
 .emotions-icon{
   width: 50%;
   height: 50%;
 }

 /* 描述文字 */
 .emotions-text{
   font-size: 13px;
 }

 .summary-container{
  display: flex;
  justify-content: space-between;
 }

 /* 心情分布总结文字 */
  .summary-text{
    margin-left: 2%;
    margin-top: 2%;
    font-size: 11px;
  }
  
  /* 心情占比 */
  .Mood-proportion{
    display: flex;
    flex-direction: column;
    flex-wrap: wrap;
    border-radius: 10px;
    margin-top: 4%;
    margin-left: 5%;
    margin-right: 5%;
    background-color: rgb(255,255,255);
  }

  /* 单个布局 */
  .moodpropor{
    width: 100%;
    height: 30%;
    display: flex;
    flex-direction: row;
  }

  /* 单个布局中的圆形 */
  .circle-mood{
    width: 30px;
    height: 30px;
    border-radius: 50%;
    display: flex;
    justify-content: center;
    align-items: center;
    margin-left: 5%;
    margin-top: 3%;
  }

  /* 文字与进度条布局 */
  .text-proccess{
    display: flex;
    flex-direction: column;
    margin-left: 3%;
    /* margin-top: 3%; */
    width: 90%;
  }

  /* 产生最多的心情 */
  .most-mood-container{
    display: flex;
    flex-direction: column;
    flex-wrap: wrap;
    border-radius: 10px;
    margin-top: 4%;
    margin-left: 5%;
    margin-right: 5%;
    margin-bottom: 3%;
    background-color: rgb(255,255,255);
  }

  /* 描述 */
  .most-mood-text{
    font-size: 15px;
    margin-top: 3%;
    margin-left: 3%;
  }

  /* icon和文字的水平排列 */
  .icon-text-container{
    width: 100%;
    height: 70%;
    display: flex;
    flex-direction: row;
    margin-top: 4%;
  }

  /* 心情和描述心情的文字竖直排列 */
  .mood-moodtext-container{
    display: flex;
    flex-direction: column;
    margin-left: 3%;
    margin-top: 3%;
  }

  /* 原因排列 */
  .reasons-flex{
    display: flex;
    flex-direction: row;
  }

   /* 描述文字 */
 .reasons-text{
  display: flex;
  background-color: white;
  border-radius: 10px;
  border: rgb(243,243,243) solid 2px;
  font-size: 10px;
  width: 140rpx;
  height: 60rpx;
  box-sizing: border-box;
  align-items: center;
  justify-content: center;
}

/* reasons 排列 */
.reasons-link {
  display: flex; 
  flex-direction: row;
  flex-wrap: wrap; 
  width: 97%;
  height: auto;
  position: relative;
  margin-left: 1%;
  margin-right: 1%;
  margin-top: 2%;
  border-radius: 5px;
 } 

 .reasons-link_child {
   display: flex;
   flex-direction: column;
   align-items: center;
   justify-content: center;
   margin-top: -7%;
   margin-left: 1.5%;
   width: 20%;
   /* 设置宽高一致 */
   aspect-ratio: 1; 
   background: transparent;
   border-radius: 5px;
   margin-bottom: 1%;
 } 

 .reasons-link_child:not(:nth-child(4n)){
  margin-right: 2.5%; 
 }

