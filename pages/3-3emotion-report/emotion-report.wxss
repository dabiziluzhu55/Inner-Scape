/* pages/motion-report/motion-report.wxss */
@import "/pages/utils/utils.wxss";
page{
  background-color: #faf9f7
}
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
} 
.background {
  object-fit: contain;
  width: 70%;
  margin-top: -30rpx;

}
.report {
  display: inline-block;
}
.report-title {
  display: inline-block;
  font-size: 20px;
  font-weight: bold;
  color: #333;
  margin-left: 40rpx;
}
.report-title.active {
  font-size:30px;
}
.block{
  position: relative;
  top:-137rpx;
  background-color: #fff; 
  width: 88%; 
  height: auto
}
.title {
  font-size: 50rpx;
  font-weight: 550;
