/* btn部分 */
.my-button {
  display: block;
  width: 100px;
  height: 40px;
  line-height: 61rpx;
  margin-bottom: 20px;
  background-color: #007bff; /* 设置背景颜色为蓝色 */
  font-family: "宋体"; /* 设置字体为宋体 */
  color: #fff; /* 设置文字颜色为白色 */
  text-align: center;
  font-size: 40rpx; /* 设置文字大小 */
  font-weight: bold; /* 设置文字粗细 */
  border-radius: 5rpx; /* 设置圆角边框 */
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.2); /* 设置按钮阴影效果 */
  outline: none; /* 去掉按钮的默认外边框 */
  cursor: pointer; /* 设置鼠标悬停时的样式为手型 */
  transition: background-color 0.3s ease; /* 添加背景颜色变化的过渡效果 */
}

.my-button:hover {
  background-color: #00b3a4; /* 设置鼠标悬停时的背景颜色 */
}

.my-button:active {
  background-color: #008f84; /* 设置按钮按下时的背景颜色 /
  box-shadow: 0 0 0 rgba(0, 0, 0, 0.2); / 取消按钮按下时的阴影效果 /
  transform: translateY(2rpx); / 添加按钮按下时的微小向下偏移效果 */
  }

/* btn文字闪烁效果 */
#btntitle {
  font-size: 40rpx;
  font-weight: bold;
  background: linear-gradient(to bottom, #64b5f6, #e57373);
  background-clip: text;
  color: #fff; /* 设置文本颜色为白色 */
  font-family: "宋体"; /* 设置字体为宋体 */
  animation: blink 3s linear infinite;
  /* -webkit-animation: blink 2s linear infinite;
  -moz-animation: blink 2s linear infinite;
  -ms-animation: blink 2s linear infinite;
  -o-animation: blink 2s linear infinite; */
  text-align: center;
}
@keyframes blink {
  0% {
    opacity: 1;
  }
  50% {
    opacity: 0.5;
  }
  100% {
    opacity: 0.8;
  }
}
