/**index.wxss**/
Page{
  background-color:#ffffff;
}
/* 自定义圆弧背景 */
.area {
  position: relative;
  overflow: hidden;
  width: 200%;
  left: -48%;
  height: 400rpx; /* 设置区域的高度为半圆的高度 */
  border-radius: 0 0 80% 80%; /* 设置只有下面两个角为半圆形 */
  /* 必须是base64编码或者网页链接 */
  background-image: url(http://175.178.90.196:7778/teach/xingkong.jpg);
  background-size: cover;
  background-position: center center; 
}

/* 头像 */
.avatar {
  position: absolute;
  top: 37%; /* 头像垂直居中 */
  left: 31%; /* 头像水平居中 */
  transform: translate(-50%, -50%); /* 头像居中显示 */
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
}

.name {
  position: absolute;
  color:#fff;
  font-size: 40rpx;
  bottom: 110px;
  left: 20rpx; /* 昵称与区域左对齐 */
  right: 0; /* 昵称与区域右对齐 */
  margin-right: 50px;
  text-align: center; /* 文字居中对齐 */
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* 头像选择框 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 999;
}

.modal-content {
  width: 600rpx;
  background-color: rgb(250,249,247);
  margin: auto;
  margin-top: 300rpx; /* 设置选择框与顶部的距离 */
  padding: 20rpx;
  border-radius: 5rpx;
}

.modal-title {
  margin-top: 0;
  margin-bottom: 10rpx; 
}

.modal-body {
  max-height: 300rpx;
  overflow-y: auto;
}

.modal-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.options {
  list-style-type: none;
  padding: 0;
}

.option {
  cursor: pointer;
  padding: 5rpx 0;
  position: relative; /* 添加相对定位 */
}

.optionitem-img {
  /* 设置头像图片的样式 */
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-right: 10rpx;
}

.option:hover {
  background-color: #f0f0f0;
}

.option-selected::after {
  content: "\2713";
  position: absolute; /* 绝对定位 */
  top: 50%;
  right: 10rpx;
  transform: translateY(-50%);
}

.modal-footer {
  text-align: center;
  margin-top: 10rpx;
}

.row {
  margin-top: 10px;
  margin-bottom: 10px; /* 设置行与行之间的间距 */
}

#confirmBtn {
  padding: 5px 10px;
  text-align: center;
  border: none;
  width: 80px;
  height: 40px;
  background-color:transparent;
  text-decoration-color: #f0f0f0;
}

#cancelBtn {
  background-color: transparent;
  border: none;
  cursor: pointer;
  padding: 0;
  margin-top: 0;
  margin-right: -190rpx;
}

.cancelicon{
  width: 20px; /* 图标的宽度 */
  height: 20px; /* 图标的高度 */
}

/* 次数记录部分 */
.container {
  position: absolute;
}

.row {
  display: flex;
  justify-content: space-between;
  position: absolute;
  top: 18%; 
  left: 0;
  right: 0;
}

.left, .right {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  flex-grow: 1;
  margin-left: 2px;
  border-radius: 50rpx;
  height: 30px;
  background-color : transparent;
}

.count {
  font-size: 28rpx;
  color: #ffffff;
}

.description {
  font-size: 24rpx;
  color: #999999;
}

/* 按钮及以下部分 */
.containerbottom {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-top: 4%;
  background-color: rgba(235, 241, 239, 0.712);
  margin-left: 2%;
  margin-right: 2%;
  border-radius: 5px;
}

/* btn容器 */
.btn-container {
  width: 90%;
  display: flex;
  justify-content: center; /* 水平居中 */
  align-items: center; /* 垂直居中 */
  padding: 5px 5px;
  border: 2px solid #fff; /* 设置白色边框 */
  border-radius: 5px;
  margin-top: 5px; /* 上边距 */
  background-color: white;
}

.closebtn,
.openbtn{
  margin: 0 50px; /* 调整按钮之间的间距 */
}

.closebtn,.openbtn {
  position: relative;
  padding: 10px;
  cursor: pointer;
  background: transparent;
  border: none;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.closeicon {
  width: 20px; /* 图标的宽度 */
  height: 20px; /* 图标的高度 */
  margin-top: -8%;
}

.openicon{
  width: 20px; /* 图标的宽度 */
  height: 20px; /* 图标的高度 */
  margin-top: 2.5%;
}

.closetext,.opentext {
  margin-top: -1px; /* 文字距离图标的间距 */
  font-size: 15px;
}


/* scroll窗口 */
.scroll-view {
  width: 90%;
  height: 100%;
  padding: 10px 5px;
  border: 2px solid #fff; /* 设置白色边框 */
  border-radius: 5px;
  margin-top: 15px; /* 上边距 */
  margin-bottom: 15px;/* 下边距 */
  background-color: white;
}
/* 条目 */
.item-container {
  /* 设置条目容器的样式，例如设置为水平排列的容器 */
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 10rpx;
  background-color:rgba(0, 153, 255, 0.39);
  gap: 10rpx;
  align-items: center;
  padding: 40rpx;
  /* 添加圆角效果 */
  border-radius: 10rpx;
  /* border : 1.5px solid black; */
  /* 设置每个条目之间的间隔距离 */
  margin-bottom: 10rpx;
  margin-right: 10rpx;
}

.item-img {
  /* 设置条目图片的样式 */
  width: 60rpx;
  height: 60rpx;
  /* border-radius: 50%; */
  margin-right: 10rpx;
}

.item-content {
  /* 设置条目内容的样式 */
  flex: 1;
}

.item-title {
  /* 设置条目标题的样式 */
  font-size: 30rpx;
  font-weight: bold;
}

.item-description {
  /* 设置条目描述的样式 */
  font-size: 28rpx;
  color: #666;
  margin-left: 5%;
}

/* 我的冥想text */
.mingtext{
  position: absolute;
  top: 5%; 
  left: 80%;
  width: 20%;
  height: 30px;
  font-size: 30rpx;
  font-weight: 400;
  background-clip: text;
  color:  #ffffff;
}

/* 新消息数量 */
.red_circle {
  position: relative;
  left : 8%;
  width: 30rpx;
  height: 30rpx;
  border-radius: 50%;
  line-height: 30rpx;
  font-size: 20rpx;
  text-align: center;
  color: white;
}

.out_of_range {
  display: none;
}