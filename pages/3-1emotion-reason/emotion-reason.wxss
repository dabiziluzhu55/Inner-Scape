/* pages/motion-reason/motion-reason.wxss */
page{
  background-color: #f8f7f5;
}
.title {
  font-size: 45rpx;
  margin-left: 40rpx;
  margin-top: 20rpx;
}
.mybox {
  margin-left: 60rpx;
}
.emotion {
  width: 150rpx;
  height:150rpx;
  border-radius: 50%;
  position:fixed;
  top:230rpx;
  left:299rpx;
}
.scroll {
  background: #f8f7f5;
  padding: 10px 10px;
  width: 100%;
  box-sizing: border-box;
}
.block1 {
  margin-left: 40rpx;
}
.block {
  margin-left: -10rpx;
}
.block,.block1 {
  display: flex;
  flex-direction: row;
}
.reasons{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  margin-top: -4%;
  margin-left: 2%;
  width: 20%;
  /* 设置宽高一致 */
  aspect-ratio: 1; 
  background: transparent;
  border-radius: 5px;
  margin-bottom: 1%;
} 
.reasons-text{
  display: flex;
  background-color: white;
  border-radius: 30rpx;
  border: rgb(243,243,243) solid 2px;
  font-size: 14px;
  width: 140rpx;
  height: 70rpx;
  box-sizing: border-box;
  align-items: center;
  justify-content: center;
}
.reasons-text.active {
  background-color: #f2a37c;
  color: white;
}
  /* 心情描述 */
.desbtn{
  margin-left: 30%;
  margin-top: 15%;
  align-items: center;
  background-color: #222;
  border-radius: 25px;
  color: white;
}
