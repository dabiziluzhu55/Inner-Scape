/* pages/write/write.wxss */
page{
  background-color: rgb(250,249,247)
}
.container{
  width: 100%;
  margin-top: -80px;
  word-wrap: break-word;
  white-space: normal;
}

.message-box {
  background-color: #fff;
  border-radius: 10px;
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
  margin-top: -20rpx;
  margin-left: 20px;
  height: auto;
  width: 88%;
}

.gap{
  /* font-size: 14px;
  color: grey; */
  margin-left: 30rpx;
  margin-top: 60rpx;
  white-space: pre-wrap;
}

.gap::before {
  content: 'hahaha';
  visibility: hidden;
}

.message-text-container{
  margin-top: 2%;
  margin-bottom: -8%;
  width: 90%;
  margin-left: 4%;
  margin-right: 2%;
}

.message-text {
  font-size: 14px;
  margin-left: 4%;
  margin-right: 30rpx;
  /* top: 50rpx; */
  /* margin-top: 35rpx; */
  /* line-height:1.6em; */
}



.message-thanks{
  font-size: 14px;
  color:black;
  margin-left: 60%;
}

.message-user{
  margin-top: -20rpx;
  margin-left: 4%;
  font-size: 12px;
  margin-bottom: 2%;
  /* font-family: '宋体'; */
}

/* 评论区域 */
.btncontainer{
  margin-top: 2%;
  display: flex;
  flex-direction: column;
  margin-left: 6%;
  width: 97%;
}

/* 每一条评论 */
.commentbtn{
  display: flex;
  flex-direction: row;
  height: auto;
  /* border: 2rpx solid black; */
  border-radius: 5px;
  background-color: white;
  margin-top: 1%;
  width: 100%;
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
}

/* 头像昵称区域 */
.avatername{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

/* 评论头像 */
.avater{
  margin-top: 5%;
  margin-left: 5%;
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
}

/* 昵称 */
.name{
  font-size: 13px;
  margin-left: 4%;
  margin-top: 3%;
}

/* 评论区域 */
.commentarea{ 
  display: flex;
  flex-direction: column;
  width: 90%;
  display: flex;
  margin-left:2%;
  word-wrap: break-word;
  white-space: normal;
}

/* 评论信息 */
.commenttext{
  margin-top: 3%;
  margin-left: 4%;
  margin-bottom: 3%;
  width: 100%;
  font-size: 14px;
  line-height: 2; 
}

