<!--pages/dairy/dairy.wxml-->
<swiper class="cover_swiper" indicator-dots='false' display-multiple-items='1' current='{{centerItem}}' bindchange='handleSwiperChange'  previous-margin='30' next-margin='30' autoplay='false' pagination = 'false'>
  <block wx:for="{{coverList}}" wx:key="id">
    <swiper-item>
      <view class='imageBox' style='text-align:center'>
      <view class='mask' wx:if='{{ index != centerItem }}'></view>
      <image src="{{item.url}}" mode='aspectFit' /></view>
    </swiper-item>
  </block>
</swiper>
